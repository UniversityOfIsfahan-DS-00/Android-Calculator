<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="darkButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/dark3</item>
<!--        <item name="android:textColor">@color/accent</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="goldButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/accent</item>
<!--        <item name="android:textColor">@color/accent</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="textViews">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>